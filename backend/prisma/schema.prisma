generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider           = "sqlserver"
  url                = env("DATABASE_URL")
  shadowDatabaseUrl  = env("SHADOW_URL")
}

model Post {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  title      String
}

model ComplaintAndSuggestionList{
  id                       Int        @id @default(autoincrement())
  ComplaintSuggestion      String? 
  ComplaintType            String?
  ComplaintReason          String?
  ComplaintResolution      String?
  ComplaintResolution_date DateTime?
  ResponsibleEmployee      String?   // going to connect a foreign key to the employee table
  Location                 String?   // going to connect a foreign key to the store table
  CreatedAt                DateTime   @default(now())
  CreatedBy                String?
  ComplaintDate            DateTime?
  ModifiedAt               DateTime?
  ModifiedBy               String?
}